# ===========================================
# Mon Joël - Configuration Environnement
# ===========================================
# Copiez ce fichier en .env.local et remplissez les valeurs

# ---------- Base de données ----------
DATABASE_URL="postgresql://user:password@localhost:5432/monjoel?schema=public"

# ---------- Auth.js / NextAuth ----------
# Générez avec: openssl rand -base64 32
AUTH_SECRET="votre-secret-auth-genere-ici"
AUTH_URL="http://localhost:3000"

# OAuth Providers (optionnel pour plus tard)
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# ---------- Analytics & Tracking ----------
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GTAG_ADS_ID="AW-XXXXXXXXXX"

# ---------- Contact & Support ----------
NEXT_PUBLIC_SUPPORT_EMAIL="contact@monjoel.com"
NEXT_PUBLIC_SUPPORT_PHONE="+33 1 23 45 67 89"

# ---------- Site Configuration ----------
NEXT_PUBLIC_SITE_URL="https://monjoel.com"
NEXT_PUBLIC_SITE_NAME="Mon Joël"

# ---------- Feature Flags ----------
ENABLE_AI_DIAGNOSTIC="true"
ENABLE_PAYMENT="false"

